<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <h1>
     Course
      <small>Trending</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="<%= admin_all_courses_path %>"><i class="fa fa-dashboard"></i> Course</a></li>
    </ol>
  </div>

  <!-- Main content -->
  <div class="content body">

    <section id="title">
      <h2 class="page-header">
        <a href="#title">Title</a>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal" style="float: right;">Update Image</button>
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update Image</h4>
              </div>
              <%= form_tag(admin_update_image_course_path , method: "post" , :multipart => true) do %> 
              <div class="modal-body">
                <div class="form-group">
                  <%= file_field_tag "image"  , style: 'font-size: initial;'%>
                  <%= hidden_field_tag "id" , @course.id %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-default">Save</button>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </h2>
        <div class="row">
          <div class="col-md-4">
            <p class="lead"><%= @course.title %></p>
          </div>
          <div class="col-md-8">
            <img src="<%= @course.image %>" alt="<%= @course.title %>" class="col-md-12 col-xs-12">
          </div>
          
        </div>
    </section><!-- /#introduction -->


    <!-- ============================================================= -->

    <section id="objective">
      <h2 class="page-header"><a href="#objective">Objective</a></h2>
      <p class="lead"><%= @course.objective %></p>
      <ul class="bring-up">
        <li><a href="#">Price: <%= @course.price %></a></li>
      </ul>
      
    </section>

    <section id="download">
      <h2 class="page-header"><a href="#download">Description</a></h2>
      <p class="lead">
        <%= @course.description %>
      </p>
      <div class="row">
        <% @course.outlines.each do |out| %>
        <div class="col-sm-6">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= out.title %></h3>
              <span class="label label-primary pull-right"><i class="fa fa-html5"></i></span>
            </div><!-- /.box-header -->
            <div class="box-body">
              <p><%= out.description %></p>
            </div><!-- /.box-body -->
          </div><!-- /.box -->
        </div><!-- /.col -->
        <% end %>
      </div><!-- /.row -->
    </section>

    <section id="videos">
      <h2 class="page-header">
        <a href="#videos">Videos</a>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#ModalVideo" style="float: right;">Add Video</button>
        <div class="modal fade" id="ModalVideo" role="dialog">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Video</h4>
              </div>
              <%= form_tag(admin_add_video_path , method: "post" , :multipart => true) do %> 
              <div class="modal-body">
                <%= hidden_field_tag "id" , @course.id %>
                  <div class="col-ms-6">
                    <div class="form-group">
                      <label >Title</label>
                      <%= text_field_tag :title , '' , class: 'form-control', autofocus: true , placeholder: "Title" %>
                    </div>
                    <div class="form-group">
                      <label >Description</label>
                      <%= text_area_tag :description , '' , cols: 1, rows: 5 , class: 'form-control', autofocus: true %>
                    </div>
                  <div class="col-ms-6">
                    <div class="form-group">
                      <label >URL</label>
                      <%= text_field_tag :url , '' , class: 'form-control', autofocus: true , placeholder: "URL" %>
                    </div>
                    <div class="form-group">
                      <label >Size (MB)</label>
                      <%= number_field_tag :size , 0 , class: 'form-control' , :step => 0.1 %>
                    </div>
                    <div class="form-group">
                      <label >Duration (Minutes)</label>
                      <%= number_field_tag :duration , 0 , class: 'form-control' , :step => 0.1 %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-default">Save</button>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </h2>
      <div class="row">
        <% @course.videos.each do |vid| %>
        <div class="col-sm-6">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= vid.title %></h3>
              <span class="label label-danger pull-right"><i class="fa fa-database"></i></span>
            </div><!-- /.box-header -->
            <div class="box-body">
              <p><%= vid.description %></p>
              <hr>
              <p><strong>URL: </strong><%= vid.url %></p>
              <p><strong>Size: </strong><%= vid.size %> MB</p>
              <p><strong>Duration: </strong><%= vid.duration %> Minutes</p>
            </div><!-- /.box-body -->
          </div><!-- /.box -->
        </div><!-- /.col -->
        <% end %>
      </div><!-- /.row -->
    </section>

  </div>
</div>
