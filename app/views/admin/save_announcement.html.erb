


    <div class="content-wrapper">

    <section class="content-header">
      <h1>
        Announcement
        <small>Add</small>
      </h1>
    </section>

    <section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Add Announcement</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <%= form_tag(admin_save_announcement_path , method: "post" , :multipart => true) do %>              
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                          <label >Announcement</label>
                          <%= text_field_tag :title , '' , class: 'form-control', autofocus: true , placeholder: "Title" %>
                        </div>
                        <div class="form-group">
                          <label >Description</label>
                          <%= text_area_tag :description , '' , cols: 1, rows: 5 , class: 'form-control', autofocus: true %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <label >Insert Image</label>
                          <%= file_field_tag "image" %>
                        </div>
                    </div>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            <% end %>
          </div>
          <!-- /.box -->
        </div>
    </div>
    </section>

    </div>
