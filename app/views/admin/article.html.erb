  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.css"/>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Article
        <small>Advanced Skills</small>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Trending</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Article Name</th>
                  <th>Description</th>
                  <th>Added On</th>
                  <th>View</th>
                </tr>
                </thead>
                <tbody>
                <% @article.each do |cor| %>
                  <tr>
                    <td><%= cor.title %></td>
                    <td><%= cor.description.truncate(75) %></td>
                    <td><%= cor.created_at.strftime("%d %b, %Y") %></td>
                    <td><button onclick="location.href = '<%= admin_specific_article_path(cor.id) %>';" class="btn btn-info">View</button></td>
                  </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>Article Name</th>
                  <th>Description</th>
                  <th>Added On</th>
                  <th>View</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
